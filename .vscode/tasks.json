{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-debug",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "mkdir -p build/Debug && clang++ -std=c++17 -O0 -g main.cpp -o build/Debug/outDebug"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"]
    }
  ]
}
