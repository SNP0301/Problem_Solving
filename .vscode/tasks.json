{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run (with input)",
      "type": "shell",
      "command": "g++ -std=c++17 -O2 -Wall -Wextra -o ${fileBasenameNoExtension} ${file} && ./${fileBasenameNoExtension} < ${workspaceFolder}/input.in",
      "group": "build",
      "problemMatcher": ["$gcc"],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    }
  ]
}
